<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
     <com.itau.mygod.tbviewer.ScrollViewContainer
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <LinearLayout
                    android:id="@+id/imagesLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="348dp"
                        android:background="@drawable/productb" />
                   
                   <TextView 
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:text="价格：XXX"
                    android:background="@android:color/white"
                    android:gravity="center" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_below="@id/imagesLayout"
                    android:background="#eeeeee"
                    android:gravity="center"
                    android:text="拖动查看图文详情"
                    android:textColor="#aaaaaa" />
           </RelativeLayout>
        </ScrollView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000000" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:gravity="center_horizontal"
                android:orientation="vertical" >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:background="@android:color/white"
                    android:gravity="center" />
            </LinearLayout>
        </ScrollView>
    </com.itau.mygod.tbviewer.ScrollViewContainer>  
    
     <LinearLayout
            android:layout_height="wrap_content"
             android:id="@+id/llybuttom"
             android:layout_width="match_parent"
             android:orientation="vertical"
             android:layout_alignParentBottom="true" >
        
             <Button
                 android:id="@+id/btnbuy"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_gravity="bottom"
                 android:background="@drawable/main_navigation_background"
                 android:text="我想要"
                 android:textColor="@color/white"
                 android:textSize="@dimen/small_middle_text_size" >
    
             </Button>
     </LinearLayout>  
    
</RelativeLayout>